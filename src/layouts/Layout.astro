---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --primary-text: #ffffff;
    --invert-primary-text: #000000;
    --secondary-text: #a600ff;
    --accent-gradient: linear-gradient(
      90deg,
      var(--invert-primary-text),
      var(--secondary-text),
      var(--invert-primary-text),
      var(--secondary-text),
      var(--invert-primary-text)
    );

    /* invert svg color */
    --invert-white: invert(96%) sepia(0%) saturate(18%) hue-rotate(278deg) brightness(104%)
      contrast(104%); /* #ffffff */
    --invert-purple: invert(23%) sepia(83%) saturate(7474%) hue-rotate(276deg) brightness(98%)
      contrast(133%); /* #a600ff */
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: 0;
  }
</style>
